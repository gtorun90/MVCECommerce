@model List<ECommerceApp.Entities.Category>

@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-2">Kategori Listesi</h2>
<p>
    @Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Ürün Adı
        </th>
        <th>
            ürün Açıklaması
        </th>
        <th style="width: 135px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>