@model IEnumerable<ECommerceApp.Entities.Product>

@{

    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Ürün Listesi</h2>
<hr />
<p>
    @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th style="width:135px;"></th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>
                <img src="~/theme/img/@product.Image" width="70"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => product.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => product.Name)
            </td>
            <td>
                @if (product.IsHome)
                {
                    <label class="badge badge-success">
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge badge-danger">
                        <i class="fa fa-ban"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @if (product.IsApproved)
                {
                    <label class="badge badge-success">
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge badge-danger">
                        <i class="fa fa-ban"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = product.Id }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Sil", "Delete", new { id = product.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
